<UserControl 
    x:Class="NTMiner.MinerStudio.Views.Ucs.MinerClient"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:blankWindow="http://dl.ntminer.top"
	xmlns:sys="clr-namespace:System;assembly=mscorlib"
	xmlns:controls="clr-namespace:NTMiner.Controls;assembly=NTMinerWpf"
	xmlns:uc="clr-namespace:NTMiner.Views.Ucs"
	xmlns:local="clr-namespace:NTMiner.Views.Ucs"
	xmlns:vm="clr-namespace:NTMiner.MinerStudio.Vms;assembly=AppModels"
	d:DataContext="{d:DesignData Source=../Design/MinerClientViewModel.xaml}"
	mc:Ignorable="d" d:DesignWidth="930">
    <UserControl.Resources>
        <Style x:Key="LblTb" TargetType="TextBlock" BasedOn="{StaticResource LblTbBase}">
            <Setter Property="Width" Value="100"></Setter>
            <Setter Property="Padding" Value="0 0 20 0"></Setter>
        </Style>
        <sys:Double x:Key="OneColWidth">480</sys:Double>
    </UserControl.Resources>
    <StackPanel HorizontalAlignment="Left">
        <WrapPanel>
            <TextBlock Style="{StaticResource LblTb}">开源版本</TextBlock>
            <TextBox 
                Padding="0" 
                Width="200"
                IsReadOnly="True" 
                Background="Transparent" 
                BorderThickness="0" 
                Text="{Binding Version, Mode=OneWay}"></TextBox>
        </WrapPanel>
        <WrapPanel Margin="0 3">
            <Border Width="100" Padding="0 0 20 0">
                <WrapPanel 
                    Visibility="{Binding VmIsOnlineVisible}" 
                    ToolTip="{Binding VmIsOnlineText}" 
                    Background="#01ffffff"
                    VerticalAlignment="Center" 
                    HorizontalAlignment="Right">
                    <Path
						Width="14"
						Height="14"
						Data="{StaticResource Icon_Online}"
						Visibility="{Binding VmIsOnline,Converter={StaticResource BoolToVisibilityConverter}}"
						Fill="Green"
						Stretch="Fill" />
                    <Path
						Width="14"
						Height="14"
						Data="{StaticResource Icon_Offline}"
						Visibility="{Binding VmIsOnline,Converter={StaticResource BoolToVisibilityInvertConverter}}"
						Fill="Red"
						Stretch="Fill" />
                </WrapPanel>
            </Border>
            <TextBlock Width="50" Text="{Binding LastActivedOnText}" VerticalAlignment="Center"></TextBlock>
            <Border Width="40" Height="19" Background="Green" Visibility="{Binding IsMining,Converter={StaticResource BoolToVisibilityConverter}}">
                <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="White">挖矿中</TextBlock>
            </Border>
            <Border Width="40" Height="19" Background="Red" Visibility="{Binding IsMining,Converter={StaticResource BoolToVisibilityInvertConverter}}">
                <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="White">未挖矿</TextBlock>
            </Border>
            <TextBlock Style="{StaticResource LblTb}" Width="70" Padding="0 0 10 0">运行时长</TextBlock>
            <TextBlock Text="{Binding BootTimeSpanText}" Width="110" VerticalAlignment="Center"></TextBlock>
            <TextBlock Style="{StaticResource LblTb}" Width="70" Padding="0 0 10 0">挖矿时长</TextBlock>
            <TextBlock Text="{Binding MineTimeSpanText}" Width="110" VerticalAlignment="Center"></TextBlock>
            <TextBlock Style="{StaticResource LblTb}" Width="50" Padding="0 0 10 0">作业</TextBlock>
            <TextBlock MinWidth="100" VerticalAlignment="Center" Text="{Binding SelectedMineWork.Name}"></TextBlock>
            <TextBlock Style="{StaticResource LblTb}" Width="50" Padding="0 0 10 0">分组</TextBlock>
            <TextBlock MinWidth="100" VerticalAlignment="Center" Text="{Binding SelectedMinerGroup.Name}"></TextBlock>
        </WrapPanel>
        <WrapPanel Margin="0 3">
            <TextBlock Style="{StaticResource LblTb}">矿机名</TextBlock>
            <TextBox 
				VerticalAlignment="Center"
				IsReadOnly="True"
				BorderThickness="0"
				Text="{Binding MinerName,Mode=OneWay}"></TextBox>
            <WrapPanel Margin="20 0 0 0">
                <TextBlock Style="{StaticResource LblTb}" Width="Auto">群控名</TextBlock>
                <TextBox 
					VerticalAlignment="Center"
					IsReadOnly="True"
					BorderThickness="0"
					Text="{Binding WorkerNameText,Mode=OneWay}"></TextBox>
            </WrapPanel>
            <WrapPanel Margin="20 0 0 0" VerticalAlignment="Center">
                <TextBlock Style="{StaticResource LblTb}" Width="Auto" Padding="0 0 10 0">内网IP</TextBlock>
                <controls:KbButton
					BorderThickness="0"
					Background="Transparent"
					Command="{Binding RemoteDesktop}"
					CornerRadius="2">
                    <Path
						Width="14"
						Height="14"
						Data="{StaticResource Icon_RemoteDesktop}"
						Fill="{StaticResource BtnBackground}"
						Stretch="Fill" />
                </controls:KbButton>
                <TextBox 
					Width="102"
					Padding="0"
					ToolTip="双击打连接程桌面"
					PreviewMouseDoubleClick="TbIp_PreviewMouseDoubleClick"
					Tag="{Binding}"
					BorderThickness="0"
					Background="Transparent"
					IsReadOnly="True"
					Text="{Binding LocalIp, Mode=OneWay}"></TextBox>
            </WrapPanel>
            <WrapPanel Margin="20 0 0 0" VerticalAlignment="Center">
                <TextBlock Width="Auto" Style="{StaticResource LblTb}" Padding="0 0 10 0">外网IP</TextBlock>
                <TextBox 
					Width="120"
					Padding="0"
					BorderThickness="0"
					Background="Transparent"
					IsReadOnly="True"
					Text="{Binding MinerIp, Mode=OneWay}"></TextBox>
            </WrapPanel>
            <WrapPanel Margin="20 0 0 0" VerticalAlignment="Center">
                <TextBlock Width="Auto" Style="{StaticResource LblTb}" Padding="0 0 10 0">网卡地址</TextBlock>
                <TextBox 
					Width="100"
					Padding="0"
					BorderThickness="0"
					Background="Transparent"
					IsReadOnly="True"
					Text="{Binding MACAddress, Mode=OneWay}"></TextBox>
            </WrapPanel>
        </WrapPanel>
        <WrapPanel Margin="0 3">
            <WrapPanel Margin="14 0 0 0" VerticalAlignment="Center">
                <Path
					Width="16"
					Height="16"
					Data="{Binding IsOuterUserEnabled,Converter={StaticResource BoolToStreamGeometryConverter}}"
					Fill="{StaticResource LableColor}"
					Stretch="Fill" />
                <TextBlock Foreground="{StaticResource LableColor}" Width="Auto" Padding="2 0 10 0">外网群控</TextBlock>
            </WrapPanel>
            <WrapPanel VerticalAlignment="Center">
                <TextBlock Style="{StaticResource LblTb}" Width="Auto" Padding="8 0 10 0">外网群控用户</TextBlock>
                <TextBlock Width="80" VerticalAlignment="Center" Text="{Binding OuterUserId}" />
            </WrapPanel>
            <WrapPanel VerticalAlignment="Center">
                <TextBlock Style="{StaticResource LblTb}" Padding="0 0 4 0">远程桌面登录名</TextBlock>
                <TextBox Width="80" IsReadOnly="True" BorderThickness="0" Text="{Binding WindowsLoginName,Mode=OneWay}"></TextBox>
                <TextBlock Style="{StaticResource LblTb}" Padding="0 0 4 0">远程桌面密码</TextBlock>
                <TextBlock Width="80" VerticalAlignment="Center" Text="{Binding WindowsPasswordStar}" />
            </WrapPanel>
            <WrapPanel VerticalAlignment="Center">
                <Path
					Width="16"
					Height="16"
					Data="{Binding IsAutoBoot,Converter={StaticResource BoolToStreamGeometryConverter}}"
					Fill="{StaticResource LableColor}"
					Stretch="Fill" />
                <TextBlock Style="{StaticResource LblTb}" Width="Auto" Padding="2 0 2 0">开机启动</TextBlock>
            </WrapPanel>
            <WrapPanel Margin="10 0 0 0" VerticalAlignment="Center">
                <Path
					Width="16"
					Height="16"
					Data="{Binding IsAutoStart,Converter={StaticResource BoolToStreamGeometryConverter}}"
					Fill="{StaticResource LableColor}"
					Stretch="Fill" />
                <TextBlock Style="{StaticResource LblTb}" Width="Auto" Padding="2 0 2 0">自动挖矿</TextBlock>
                <TextBlock Margin="2 0 0 0" Foreground="{StaticResource LableColor}">延时</TextBlock>
                <TextBlock Margin="4 0" Text="{Binding AutoStartDelaySeconds}"></TextBlock>
                <TextBlock Foreground="{StaticResource LableColor}">秒</TextBlock>
            </WrapPanel>
        </WrapPanel>
        <WrapPanel Margin="0 3">
            <TextBlock Style="{StaticResource LblTb}" Text="{Binding MainCoinCode}"></TextBlock>
            <WrapPanel>
                <Grid Width="{StaticResource OneColWidth}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <CheckBox x:Name="ChkHideMainCoinWallet" FocusVisualStyle="{x:Null}" VerticalAlignment="Center">隐藏钱包</CheckBox>
                    <TextBox 
						Grid.Column="1"
						Height="14"
						Visibility="{Binding ElementName=ChkHideMainCoinWallet,Path=IsChecked, Converter={StaticResource BoolToVisibilityInvertConverter}}"
						Padding="4 0"
						BorderThickness="0"
						Background="Transparent"
						Text="{Binding MainCoinWallet, Mode=OneWay}" 
						IsReadOnly="True"></TextBox>
                    <WrapPanel Grid.Column="1" Visibility="{Binding ElementName=ChkHideMainCoinWallet,Path=IsChecked, Converter={StaticResource BoolToVisibilityConverter}}">
                        <TextBlock Padding="4 0 0 0" Foreground="{StaticResource LableColor}">powered by NTMiner@开源矿工。</TextBlock>
                        <TextBlock x:Name="TbDateTime" Margin="10 0 0 0"></TextBlock>
                    </WrapPanel>
                </Grid>
                <WrapPanel VerticalAlignment="Center">
                    <TextBlock Text="{Binding MainCoinRejectShare}" ToolTip="拒绝份额"></TextBlock>
                    <TextBlock Padding="1 0" Text="/"></TextBlock>
                    <TextBlock Text="{Binding MainCoinTotalShare}" ToolTip="找到份额"></TextBlock>
                    <TextBlock Margin="10 0 0 0" Text="{Binding MainCoinRejectPercentText}" ToolTip="拒绝率" Foreground="{Binding MainCoinRejectPercentForeground}"></TextBlock>
                </WrapPanel>
                <WrapPanel Margin="10 0 0 0" VerticalAlignment="Center">
                    <TextBlock Text="{Binding IncomeMainCoinPerDayText}"></TextBlock>
                    <TextBlock 
						Text="{Binding MainCoinCode}" 
						Margin="2 0 0 0"
						Padding="0"
						Foreground="{StaticResource LableColor}"></TextBlock>
                    <TextBlock Text=", "></TextBlock>
                    <TextBlock Text="{Binding IncomeMainCoinCnyPerDayText}"></TextBlock>
                    <TextBlock 
						Text="￥" 
						Margin="2 0 0 0"
						Padding="0"
						Foreground="{StaticResource LableColor}"></TextBlock>
                    <TextBlock Padding="1 0" Text="/" Foreground="{StaticResource LableColor}" />
                    <TextBlock Padding="0" Text="天" Foreground="{StaticResource LableColor}" />
                </WrapPanel>
            </WrapPanel>
        </WrapPanel>
        <WrapPanel Margin="0 3" Visibility="{Binding DualCoinCode,Converter={StaticResource NotNullOrEmptyVisibilityConverter}}">
            <TextBlock Style="{StaticResource LblTb}" Text="{Binding DualCoinCode}"></TextBlock>
            <WrapPanel>
                <TextBox 
					Padding="0"
					BorderThickness="0"
					Height="14"
					Width="{StaticResource OneColWidth}"
					Background="Transparent"
					IsReadOnly="True"
					Text="{Binding DualCoinWallet, Mode=OneWay}"></TextBox>
                <WrapPanel VerticalAlignment="Center">
                    <TextBlock Text="{Binding DualCoinRejectShare}"></TextBlock>
                    <TextBlock Padding="1 0" Text="/"></TextBlock>
                    <TextBlock Text="{Binding DualCoinTotalShare}"></TextBlock>
                    <TextBlock Margin="10 0 0 0" Text="{Binding DualCoinRejectPercentText}" Foreground="{Binding DualCoinRejectPercentForeground}"></TextBlock>
                </WrapPanel>
                <WrapPanel Margin="10 0 0 0" VerticalAlignment="Center">
                    <TextBlock Text="{Binding IncomeDualCoinPerDayText}"></TextBlock>
                    <TextBlock 
						Text="{Binding DualCoinCode}" 
						Margin="2 0 0 0"
						Padding="0"
						Foreground="{StaticResource LableColor}"></TextBlock>
                    <TextBlock Text=", "></TextBlock>
                    <TextBlock Text="{Binding IncomeDualCoinCnyPerDayText}"></TextBlock>
                    <TextBlock 
						Text="￥" 
						Margin="2 0 0 0"
						Padding="0"
						Foreground="{StaticResource LableColor}"></TextBlock>
                    <TextBlock Padding="1 0" Text="/" Foreground="{StaticResource LableColor}" />
                    <TextBlock Padding="0" Text="天" Foreground="{StaticResource LableColor}" />
                </WrapPanel>
            </WrapPanel>
        </WrapPanel>
        <Grid Margin="44 3 0 3">
            <ScrollViewer x:Name="SpeedTableScrollViewer" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled">
                <DataGrid
                    HorizontalAlignment="Left" 
			        ColumnHeaderHeight="32"
			        MinRowHeight="24"
                    BorderThickness="0 1 0 0"
                    BorderBrush="{StaticResource LightLineColor}"
                    IsReadOnly="True"
			        Background="Transparent"
                    VerticalScrollBarVisibility="Disabled"
			        ItemsSource="{Binding GpuTableVm.Items}">
                    <DataGrid.Resources>
                        <controls:BindingProxy x:Key="proxy" Data="{Binding GpuTableVm}" />
                    </DataGrid.Resources>
                    <DataGrid.Columns>
                        <DataGridTemplateColumn MinWidth="40" Width="46" Header="编号" IsReadOnly="True">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <WrapPanel>
                                        <TextBlock Text="GPU" Foreground="{StaticResource LableColor}"></TextBlock>
                                        <TextBlock Text="{Binding Index}" Foreground="{StaticResource LableColor}"></TextBlock>
                                    </WrapPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTemplateColumn MinWidth="70" Width="Auto" Header="名称" IsReadOnly="True">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Name}"></TextBlock>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTemplateColumn Width="40" IsReadOnly="True">
                            <DataGridTemplateColumn.Header>
                                <TextBlock Text="显存?" ToolTip="'显存'可能显示为0，因为挖矿端自2.2.0.6开始提供该数据"></TextBlock>
                            </DataGridTemplateColumn.Header>
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding TotalMemoryGbText}"></TextBlock>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTemplateColumn Width="90" IsReadOnly="True">
                            <DataGridTemplateColumn.Header>
                                <StackPanel>
                                    <TextBlock Text="{Binding Data.MainCoinCode, Source={StaticResource proxy}}" FontSize="12"></TextBlock>
                                    <TextBlock Text="{Binding Data.MainCoinSpeedText, Source={StaticResource proxy}}" FontSize="11"></TextBlock>
                                </StackPanel>
                            </DataGridTemplateColumn.Header>
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" Text="{Binding MainCoinSpeedText}"></TextBlock>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTemplateColumn 
                            Width="40" IsReadOnly="True"
                            Visibility="{Binding Data.IsRejectOneGpuShare,Source={StaticResource proxy},Converter={StaticResource BoolToVisibilityConverter}}">
                            <DataGridTemplateColumn.Header>
                                <TextBlock Text="拒绝?" ToolTip="'拒绝'，挖矿端自2.6.6.3开始提供该数据"></TextBlock>
                            </DataGridTemplateColumn.Header>
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding RejectShare}"></TextBlock>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTemplateColumn 
                            Width="40" IsReadOnly="True"
                            Visibility="{Binding Data.IsFoundOneGpuShare,Source={StaticResource proxy},Converter={StaticResource BoolToVisibilityConverter}}">
                            <DataGridTemplateColumn.Header>
                                <TextBlock Text="找到?" ToolTip="'找到'，挖矿端自2.6.6.3开始提供该数据"></TextBlock>
                            </DataGridTemplateColumn.Header>
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding FoundShare}"></TextBlock>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTemplateColumn 
                            Width="40" IsReadOnly="True"
                            Visibility="{Binding Data.IsGotOneIncorrectGpuShare,Source={StaticResource proxy},Converter={StaticResource BoolToVisibilityConverter}}">
                            <DataGridTemplateColumn.Header>
                                <TextBlock Text="无效?" ToolTip="'无效'，挖矿端自2.6.6.3开始提供该数据"></TextBlock>
                            </DataGridTemplateColumn.Header>
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding IncorrectShare}"></TextBlock>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTemplateColumn 
					        Width="90" IsReadOnly="True"
					        Visibility="{Binding Data.DualCoinCode, Source={StaticResource proxy}, Converter={StaticResource NotNullOrEmptyVisibilityConverter}}">
                            <DataGridTemplateColumn.Header>
                                <StackPanel>
                                    <TextBlock Text="{Binding Data.DualCoinCode, Source={StaticResource proxy}}" FontSize="12"></TextBlock>
                                    <TextBlock Text="{Binding Data.DualCoinSpeedText, Source={StaticResource proxy}}" FontSize="11"></TextBlock>
                                </StackPanel>
                            </DataGridTemplateColumn.Header>
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" Text="{Binding DualCoinSpeedText}"></TextBlock>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTemplateColumn Width="50" IsReadOnly="True">
                            <DataGridTemplateColumn.HeaderTemplate>
                                <DataTemplate>
                                    <StackPanel>
                                        <TextBlock Text="功耗" FontSize="12"></TextBlock>
                                        <TextBlock Text="{Binding Data.PowerUsageWText, Source={StaticResource proxy}}" FontSize="11"></TextBlock>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.HeaderTemplate>
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" Text="{Binding PowerUsageWText}"></TextBlock>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTemplateColumn Width="40" IsReadOnly="True">
                            <DataGridTemplateColumn.HeaderTemplate>
                                <DataTemplate>
                                    <StackPanel>
                                        <TextBlock Text="温度" FontSize="12"></TextBlock>
                                        <TextBlock 
					                        ToolTip="最高卡温"
                                            FontSize="11"
					                        Foreground="{Binding Data.TempForeground,Source={StaticResource proxy}}"
					                        Text="{Binding Data.MaxTempText,Source={StaticResource proxy}}"></TextBlock>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.HeaderTemplate>
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Foreground="{Binding TemperatureForeground}" HorizontalAlignment="Center" VerticalAlignment="Center" Text="{Binding TemperatureText}"></TextBlock>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTemplateColumn Header="风扇" Width="40" IsReadOnly="True">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" Text="{Binding FanSpeedText}"></TextBlock>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTemplateColumn Width="40" IsReadOnly="True">
                            <DataGridTemplateColumn.HeaderTemplate>
                                <DataTemplate>
                                    <StackPanel ToolTip="'核心电压'可能显示为0，因为挖矿端自2.6.0.0开始上报核心电压且只支持A卡">
                                        <TextBlock Text="核心" FontSize="12"></TextBlock>
                                        <TextBlock Text="电压？" FontSize="12"></TextBlock>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.HeaderTemplate>
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" Text="{Binding CoreVoltage}"></TextBlock>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTemplateColumn Width="40" IsReadOnly="True">
                            <DataGridTemplateColumn.HeaderTemplate>
                                <DataTemplate>
                                    <StackPanel ToolTip="'显存电压'可能显示为0，因为挖矿端自2.6.0.0开始上报显存电压且只支持A卡">
                                        <TextBlock Text="显存" FontSize="12"></TextBlock>
                                        <TextBlock Text="电压？" FontSize="12"></TextBlock>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.HeaderTemplate>
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" Text="{Binding MemoryVoltage}"></TextBlock>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTemplateColumn Width="40" IsReadOnly="True">
                            <DataGridTemplateColumn.HeaderTemplate>
                                <DataTemplate>
                                    <TextBlock Text="功耗" TextWrapping="Wrap" FontSize="12"></TextBlock>
                                </DataTemplate>
                            </DataGridTemplateColumn.HeaderTemplate>
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" Text="{Binding PowerCapacityText}"></TextBlock>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTemplateColumn Width="40" IsReadOnly="True">
                            <DataGridTemplateColumn.HeaderTemplate>
                                <DataTemplate>
                                    <StackPanel ToolTip="'温度阈值'可能显示为0，因为挖矿端自2.2.0.6开始上报温度阈值">
                                        <TextBlock Text="温度" FontSize="12"></TextBlock>
                                        <TextBlock Text="阈值？" FontSize="12"></TextBlock>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.HeaderTemplate>
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" Text="{Binding TempLimitText}"></TextBlock>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTemplateColumn Width="60" IsReadOnly="True">
                            <DataGridTemplateColumn.HeaderTemplate>
                                <DataTemplate>
                                    <TextBlock Text="核心" TextWrapping="Wrap" FontSize="12"></TextBlock>
                                </DataTemplate>
                            </DataGridTemplateColumn.HeaderTemplate>
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" Text="{Binding CoreClockDeltaMText}"></TextBlock>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTemplateColumn Width="60" IsReadOnly="True">
                            <DataGridTemplateColumn.HeaderTemplate>
                                <DataTemplate>
                                    <TextBlock Text="显存" TextWrapping="Wrap" FontSize="12"></TextBlock>
                                </DataTemplate>
                            </DataGridTemplateColumn.HeaderTemplate>
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" Text="{Binding MemoryClockDeltaMText}"></TextBlock>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </ScrollViewer>
            <Border Margin="0 32 0 16" Background="#01ffffff"></Border>
            <Border Height="16" Background="#01ffffff" VerticalAlignment="Bottom" Visibility="{Binding ElementName=SpeedTableScrollViewer,Path=ComputedHorizontalScrollBarVisibility,Converter={StaticResource VisibilityInvertConverter}}"></Border>
        </Grid>
        <WrapPanel>
            <WrapPanel>
                <TextBlock Style="{StaticResource LblTb}">主币矿池</TextBlock>
                <StackPanel Width="200">
                    <TextBox 
                        Height="15"
					    Padding="0"
					    ToolTip="{Binding MainCoinPool}"
					    BorderThickness="0"
					    Background="Transparent"
					    IsReadOnly="True"
					    Text="{Binding MainCoinPool, Mode=OneWay}"></TextBox>
                    <WrapPanel Height="15">
                        <TextBlock Foreground="{StaticResource LableColor}">矿池延时</TextBlock>
                        <TextBlock Margin="4 0 0 0" Text="{Binding MainCoinPoolDelay}"></TextBlock>
                    </WrapPanel>
                </StackPanel>
            </WrapPanel>
            <WrapPanel Visibility="{Binding DualCoinPool,Converter={StaticResource NotNullOrEmptyVisibilityConverter}}">
                <TextBlock Style="{StaticResource LblTb}">双挖矿池</TextBlock>
                <StackPanel Width="200">
                    <TextBox 
                        Height="15"
					    Padding="0"
					    ToolTip="{Binding DualCoinPool}"
					    BorderThickness="0"
					    Background="Transparent"
					    IsReadOnly="True"
					    Text="{Binding DualCoinPool, Mode=OneWay}"></TextBox>
                    <WrapPanel Height="15">
                        <TextBlock Foreground="{StaticResource LableColor}">矿池延时</TextBlock>
                        <TextBlock Margin="4 0 0 0" Text="{Binding DualCoinPoolDelay}"></TextBlock>
                    </WrapPanel>
                </StackPanel>
            </WrapPanel>
            <WrapPanel>
                <TextBlock Style="{StaticResource LblTb}">挖矿内核</TextBlock>
                <StackPanel Width="200">
                    <TextBox 
                        Height="15"
					    Padding="0"
					    BorderThickness="0"
					    Background="Transparent"
					    IsReadOnly="True"
					    Text="{Binding Kernel, Mode=OneWay}"></TextBox>
                    <WrapPanel Height="15">
                        <TextBlock Foreground="{StaticResource LableColor}">内核重启次数</TextBlock>
                        <TextBlock Margin="4 0 0 0" Text="{Binding KernelSelfRestartCount}"></TextBlock>
                    </WrapPanel>
                </StackPanel>
            </WrapPanel>
        </WrapPanel>
        <WrapPanel Margin="0 3">
            <WrapPanel>
                <TextBlock Style="{StaticResource LblTb}">操作系统</TextBlock>
                <TextBox 
                    IsReadOnly="True" 
                    Background="Transparent" 
                    Width="160"
                    BorderThickness="0" 
                    Text="{Binding OSName, Mode=OneWay}"></TextBox>
            </WrapPanel>
            <WrapPanel>
                <TextBlock Style="{StaticResource LblTb}" Width="Auto">物理内存</TextBlock>
                <TextBox 
                    Padding="0" 
                    IsReadOnly="True" 
                    Width="100"
                    Background="Transparent" 
                    BorderThickness="0" 
                    Text="{Binding TotalPhysicalMemoryGbText, Mode=OneWay}"></TextBox>
            </WrapPanel>
            <WrapPanel>
                <TextBlock Style="{StaticResource LblTb}" Width="Auto">虚拟内存</TextBlock>
                <TextBox 
                    Padding="0" 
                    IsReadOnly="True" 
                    Width="100"
                    Background="Transparent" 
                    BorderThickness="0" 
                    Text="{Binding OSVirtualMemoryGbText, Mode=OneWay}"></TextBox>
            </WrapPanel>
            <WrapPanel>
                <TextBlock Style="{StaticResource LblTb}" Width="Auto">剩余磁盘</TextBlock>
                <TextBox 
                    Padding="0" 
                    IsReadOnly="True" 
                    Background="Transparent" 
                    BorderThickness="0" 
                    Text="{Binding DiskSpace, Mode=OneWay}"></TextBox>
            </WrapPanel>
        </WrapPanel>
        <WrapPanel Margin="0 3">
            <TextBlock Style="{StaticResource LblTb}">CPU使用率</TextBlock>
            <WrapPanel Width="50" VerticalAlignment="Center">
                <TextBlock Text="{Binding CpuPerformance}"></TextBlock>
                <TextBlock Text="%"></TextBlock>
            </WrapPanel>
            <TextBlock Style="{StaticResource LblTb}">CPU温度</TextBlock>
            <WrapPanel Width="50" VerticalAlignment="Center">
                <TextBlock Text="{Binding CpuTemperature}"></TextBlock>
                <TextBlock Text="℃"></TextBlock>
            </WrapPanel>
            <WrapPanel>
                <TextBlock Style="{StaticResource LblTb}">显卡</TextBlock>
                <Path
				    Width="18"
				    Height="14"
				    ToolTip="NVIDIA"
				    Visibility="{Binding IsNvidiaIconVisible}"
				    Data="{StaticResource Icon_Nvidia}"
				    Fill="Green"
				    Stretch="Fill" />
                <Path
				    Width="16"
				    Height="14"
				    ToolTip="AMD"
				    Visibility="{Binding IsAmdIconVisible}"
				    Data="{StaticResource Icon_AMD}"
				    Fill="Red"
				    Stretch="Fill" />
                <TextBlock VerticalAlignment="Center" Text=" x "></TextBlock>
                <TextBlock VerticalAlignment="Center" Text="{Binding GpuCount}"></TextBlock>
                <TextBox 
				    Margin="4 0 0 0"
				    Padding="0"
				    BorderThickness="0"
				    Background="Transparent"
				    IsReadOnly="True"
				    ToolTip="{Binding GpuInfo}"
				    Text="{Binding GpuInfo, Mode=OneWay}"></TextBox>
                <TextBlock Margin="10 0 0 0" Style="{StaticResource LblTb}" Width="Auto">显卡驱动</TextBlock>
                <TextBox 
				    Margin="4 0 0 0"
				    Padding="0"
                    Width="100"
				    BorderThickness="0"
				    Background="Transparent"
				    IsReadOnly="True"
				    Text="{Binding GpuDriver, Mode=OneWay}"></TextBox>
            </WrapPanel>
        </WrapPanel>
        <WrapPanel Margin="0 3">
            <TextBlock Style="{StaticResource LblTb}"></TextBlock>
            <WrapPanel Width="260">
                <Path
					Width="16"
					Height="16"
					Data="{Binding IsAutoDisableWindowsFirewall,Converter={StaticResource BoolToStreamGeometryConverter}}"
					Fill="{StaticResource LableColor}"
					Stretch="Fill" />
                <TextBlock Margin="2 0 0 0" Foreground="{StaticResource LableColor}">启动时自动关闭 Windows 防火墙</TextBlock>
            </WrapPanel>
            <WrapPanel Width="260">
                <Path
					Width="16"
					Height="16"
					Data="{Binding IsDisableUAC,Converter={StaticResource BoolToStreamGeometryConverter}}"
					Fill="{StaticResource LableColor}"
					Stretch="Fill" />
                <TextBlock Margin="2 0 0 0" Foreground="{StaticResource LableColor}">启动时自动关闭 Windows UAC</TextBlock>
            </WrapPanel>
            <WrapPanel Width="260">
                <Path
					Width="16"
					Height="16"
					Data="{Binding IsDisableWAU,Converter={StaticResource BoolToStreamGeometryConverter}}"
					Fill="{StaticResource LableColor}"
					Stretch="Fill" />
                <TextBlock Margin="2 0 0 0" Foreground="{StaticResource LableColor}">启动时自动关闭 Windows 自动更新</TextBlock>
            </WrapPanel>
        </WrapPanel>
        <WrapPanel Margin="0 3">
            <TextBlock Style="{StaticResource LblTb}"></TextBlock>
            <WrapPanel Width="260">
                <Path
					Width="16"
					Height="16"
					Data="{Binding IsDisableAntiSpyware,Converter={StaticResource BoolToStreamGeometryConverter}}"
					Fill="{StaticResource LableColor}"
					Stretch="Fill" />
                <TextBlock Margin="2 0 0 0" Foreground="{StaticResource LableColor}">启动时自动关闭 Windows Defender</TextBlock>
            </WrapPanel>
            <WrapPanel Width="260">
                <Path
					Width="16"
					Height="16"
					Data="{StaticResource Icon_CheckedBox}"
					Fill="{StaticResource LableColor}"
					Stretch="Fill" />
                <TextBlock Margin="2 0 0 0" Foreground="{StaticResource LableColor}">启动时自动关闭 Windows 系统休眠</TextBlock>
            </WrapPanel>
            <WrapPanel Width="260">
                <Path
					Width="16"
					Height="16"
					Data="{Binding Is1080PillEnabled,Converter={StaticResource BoolToStreamGeometryConverter}}"
					Fill="{StaticResource LableColor}"
					Stretch="Fill" />
                <TextBlock Margin="2 0 0 0" Foreground="{StaticResource LableColor}">有1080/1080ti显卡时启动小药丸加速算力</TextBlock>
            </WrapPanel>
        </WrapPanel>
        <WrapPanel Margin="0 3">
            <TextBlock Style="{StaticResource LblTb}"></TextBlock>
            <WrapPanel Width="260">
                <Path
					Width="16"
					Height="16"
					Data="{Binding IsPreventDisplaySleep,Converter={StaticResource BoolToStreamGeometryConverter}}"
					Fill="{StaticResource LableColor}"
					Stretch="Fill" />
                <TextBlock Margin="2 0 0 0" Foreground="{StaticResource LableColor}">开着开源矿工时阻止显示器休眠</TextBlock>
            </WrapPanel>
            <WrapPanel Width="260">
                <Path
					Width="16"
					Height="16"
					Data="{Binding IsAutoReboot,Converter={StaticResource BoolToStreamGeometryConverter}}"
					Fill="{StaticResource LableColor}"
					Stretch="Fill" />
                <TextBlock Margin="2 0 0 0" Foreground="{StaticResource LableColor}">Windows蓝屏自动重启</TextBlock>
            </WrapPanel>
        </WrapPanel>
        <WrapPanel Margin="0 3">
            <TextBlock Style="{StaticResource LblTb}"></TextBlock>
            <WrapPanel Width="260">
                <Path
					Width="16"
					Height="16"
					Data="{Binding IsRaiseHighCpuEvent,Converter={StaticResource BoolToStreamGeometryConverter}}"
					Fill="{StaticResource LableColor}"
					Stretch="Fill" />
                <TextBlock Margin="2 0 0 0" Foreground="{StaticResource LableColor}">CPU使用率连续</TextBlock>
                <TextBlock Padding="4 0" Text="{Binding HighCpuSeconds}"></TextBlock>
                <TextBlock Foreground="{StaticResource LableColor}">秒达到</TextBlock>
                <TextBlock Padding="4 0" Text="{Binding HighCpuPercent}"></TextBlock>
                <TextBlock Foreground="{StaticResource LableColor}">%时告警</TextBlock>
            </WrapPanel>
            <WrapPanel Width="260">
                <Path
					Width="16"
					Height="16"
					Data="{Binding IsAutoStopByCpu,Converter={StaticResource BoolToStreamGeometryConverter}}"
					Fill="{StaticResource LableColor}"
					Stretch="Fill" />
                <TextBlock Margin="2 0 0 0" Foreground="{StaticResource LableColor}">CPU温度连续</TextBlock>
                <TextBlock Padding="4 0" Text="{Binding CpuGETemperatureSeconds}"></TextBlock>
                <TextBlock Foreground="{StaticResource LableColor}">秒达到</TextBlock>
                <TextBlock Padding="4 0" Text="{Binding CpuStopTemperature}"></TextBlock>
                <TextBlock Foreground="{StaticResource LableColor}">℃时停止挖矿</TextBlock>
            </WrapPanel>
            <WrapPanel Width="260">
                <Path
					Width="16"
					Height="16"
					Data="{Binding IsAutoStartByCpu,Converter={StaticResource BoolToStreamGeometryConverter}}"
					Fill="{StaticResource LableColor}"
					Stretch="Fill" />
                <TextBlock Margin="2 0 0 0" Foreground="{StaticResource LableColor}">CPU温度连续</TextBlock>
                <TextBlock Padding="4 0" Text="{Binding CpuLETemperatureSeconds}"></TextBlock>
                <TextBlock Foreground="{StaticResource LableColor}">秒低于</TextBlock>
                <TextBlock Padding="4 0" Text="{Binding CpuStartTemperature}"></TextBlock>
                <TextBlock Foreground="{StaticResource LableColor}">℃时开始挖矿</TextBlock>
            </WrapPanel>
        </WrapPanel>
        <WrapPanel Margin="0 3">
            <TextBlock Style="{StaticResource LblTb}"></TextBlock>
            <WrapPanel Width="260" VerticalAlignment="Center">
                <Path
					Width="16"
					Height="16"
					Data="{Binding IsAutoRestartKernel,Converter={StaticResource BoolToStreamGeometryConverter}}"
					Fill="{StaticResource LableColor}"
					Stretch="Fill" />
                <TextBlock Foreground="{StaticResource LableColor}" Padding="2 0 0 0">自动重启内核，上限</TextBlock>
                <TextBlock Margin="4 0" Text="{Binding AutoRestartKernelTimes}"></TextBlock>
                <TextBlock Foreground="{StaticResource LableColor}">次</TextBlock>
            </WrapPanel>
            <WrapPanel Width="260" VerticalAlignment="Center">
                <Path
					Width="16"
					Height="16"
					Data="{Binding IsNoShareRestartKernel,Converter={StaticResource BoolToStreamGeometryConverter}}"
					Fill="{StaticResource LableColor}"
					Stretch="Fill" />
                <TextBlock Margin="2 0" Text="{Binding NoShareRestartKernelMinutes}"></TextBlock>
                <TextBlock Foreground="{StaticResource LableColor}">分钟无份额重启内核</TextBlock>
            </WrapPanel>
            <WrapPanel Width="260" VerticalAlignment="Center">
                <Path
					Width="16"
					Height="16"
					Data="{Binding IsNoShareRestartComputer,Converter={StaticResource BoolToStreamGeometryConverter}}"
					Fill="{StaticResource LableColor}"
					Stretch="Fill" />
                <TextBlock Margin="2 0" Text="{Binding NoShareRestartComputerMinutes}"></TextBlock>
                <TextBlock Foreground="{StaticResource LableColor}">分钟无份额重启电脑</TextBlock>
            </WrapPanel>
        </WrapPanel>
        <WrapPanel Margin="0 3">
            <TextBlock Style="{StaticResource LblTb}"></TextBlock>
            <WrapPanel Width="260" VerticalAlignment="Center">
                <Path
					Width="16"
					Height="16"
					Data="{Binding IsPeriodicRestartKernel,Converter={StaticResource BoolToStreamGeometryConverter}}"
					Fill="{StaticResource LableColor}"
					Stretch="Fill" />
                <TextBlock Margin="2 0 0 0" Foreground="{StaticResource LableColor}">每</TextBlock>
                <TextBlock Margin="2 0" Text="{Binding PeriodicRestartKernelHours}"></TextBlock>
                <TextBlock Foreground="{StaticResource LableColor}">小时</TextBlock>
                <TextBlock Margin="2 0" Text="{Binding PeriodicRestartKernelMinutes}"></TextBlock>
                <TextBlock Foreground="{StaticResource LableColor}">分钟周期重启内核</TextBlock>
            </WrapPanel>
            <WrapPanel Width="260" VerticalAlignment="Center">
                <Path
					Width="16"
					Height="16"
					Data="{Binding IsPeriodicRestartComputer,Converter={StaticResource BoolToStreamGeometryConverter}}"
					Fill="{StaticResource LableColor}"
					Stretch="Fill" />
                <TextBlock Margin="2 0 0 0" Foreground="{StaticResource LableColor}">每</TextBlock>
                <TextBlock Margin="2 0" Text="{Binding PeriodicRestartComputerHours}"></TextBlock>
                <TextBlock Foreground="{StaticResource LableColor}">小时</TextBlock>
                <TextBlock Margin="2 0" Text="{Binding PeriodicRestartComputerMinutes}"></TextBlock>
                <TextBlock Foreground="{StaticResource LableColor}">分钟周期重启电脑</TextBlock>
            </WrapPanel>
        </WrapPanel>
        <Grid Margin="0 3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <TextBlock Style="{StaticResource LblTb}" VerticalAlignment="Top">内核命令行</TextBlock>
            <controls:KbMuiltilineTextBox 
				Grid.Column="1"
				Padding="0"
				BorderThickness="0"
				Background="Transparent"
				IsReadOnly="True"
				ToolTip="{Binding KernelCommandLine}"
				Text="{Binding KernelCommandLine, Mode=OneWay}"></controls:KbMuiltilineTextBox>
        </Grid>
    </StackPanel>
</UserControl>
